{% extends 'site/app_layout.html.twig' %}

{% block meta_title %}Circus Brothers | Kontakt{% endblock %}
{% block meta_keywords %}Circus Brothers, Kapela, Koncert, Party, Firemní večírek, Oslava, Festival, Circus, Šapitó, Zábava, Balkan, Bashavel{% endblock %}
{% block meta_description %}Prozkoumejte galerii fotografií a videí Circus Brothers a ponořte se do atmosféry našich nezapomenutelných vystoupení a událostí.{% endblock %}
{% block og_meta_title %}Fotografie a Videa Circus Brothers | Ponořte se do našeho světa{% endblock %}
{% block og_meta_description %}Objevte svět Circus Brothers prostřednictvím naší bohaté galerie fotografií a videí. Zažijte atmosféru našich vystoupení z pohodlí vašeho domova.{% endblock %}

{% set count = 1 %}

{% block body %}
    {% include 'site/app/_component/header.html.twig' %}

    <div class="w-100">
        {% for block in mediaContentItems %}
            <div class="row g-0">
                {% set isPhotoBlock = block|first.videoLink is null %}
                {% if isPhotoBlock %}
                    {% for mediaContent in block %}
                        <div class="col-lg-6 col-12">
                            <img src="{{ asset(imageAssets ~ mediaContent.photo.fileName) }}" alt="{{ mediaContent.name }}" style="width: 100%; height: auto;">
                        </div>
                    {% endfor %}
                {% else %}
                    {% for mediaContent in block %}
                        <div class="col-12 vh-100">
                            <iframe class="vh-100 w-100"
                                    src="{{ mediaContent.videoLink }}"
                                    title="YouTube video player"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                    referrerpolicy="strict-origin-when-cross-origin"
                                    allowfullscreen>
                            </iframe>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        {% endfor %}
    </div>

    {% include 'site/app/_component/footer.html.twig' %}
{% endblock %}