{% extends 'site/app_layout.html.twig' %}

{% block meta_title %}Circus Brothers Official{% endblock %}
{% block meta_keywords %}Circus Brothers, Circus Brothers Official, Kapela, Koncert, Party, Firemní večírek, Oslava, Festival, Circus, Šapitó, Zábava, Balkan, Bashavel{% endblock %}
{% block meta_description %}Objevte Circus Brothers, dynamickou kapelu, která míchá balkánské rytmy s disco atmosférou pro nezapomenutelné koncerty, párty a festivaly. Ideální pro oslavy a firemní akce plné energie a tance.{% endblock %}
{% block og_meta_title %}Circus Brothers: Balkánská Párty a Koncertní Extravaganza{% endblock %}
{% block og_meta_description %}Připojte se k Circus Brothers pro nezapomenutelnou směs balkánských a disco rytmů, která oživí vaše večírky, firemní akce a festivaly s energií a tancem.{% endblock %}

{% block body %}
    {% include 'site/app/_component/header.html.twig' %}

    <div class="video-section">
        <img class="logo-hp text-center d-none d-sm-block" src="{{ asset('images/logo/logo_white.webp') }}" alt="Circus Brother">
        <img id="banner-image" src="{{ asset('images/CB_header.webp') }}" alt="Circus Brother">
    </div>

    <div class="container px-4 px-xs-0">
        <div class="row my-5">
            <div class="col-12 col-md-8 mx-auto mt-4">
                <p class="h5 mb-3 fw-bold text-center fest-text" data-aos="fade-up" data-aos-duration="1000">
                    Šestičlená cirkusová rodinka, kde je každý člen unikátním dílkem pestrobarevné skládačky a jejíchž
                    skladby vás rozhodně nenechají v klidu. Autorské skladby vycházejí z tradiční balkánské dechovky a
                    dále jsou ve zvuku i žánru obaleny současnými hudebními vlivy. Dechové nástroje, housle a klarinet,
                    to vše doplněné hutnými synťáky, elektrickou kytarou a rozmanitými vícehlasy. Unikátní energická
                    show na kterou jen tak nezapomenete.
                </p>
            </div>
            <p class="mb-0 text-center mt-5 helvetica-font">Vystupovali jsme na</p>
            <div class="row mt-3 mb-4">
                <div class="col-12 col-md-8 mx-auto">
                    <div class="row d-flex justify-content-around">
                        <div class="col-md-3 col mb-5 mb-md-0 justify-content-center justify-content-start d-flex align-items-center" data-aos="fade-up" data-aos-duration="1000">
                            <img class="fest-logo" src="{{ asset('images/fests/RFP.webp') }}" alt="ROCK FOR PEOPLE">
                        </div>
                        <div class="col-md-3 col mb-5 mb-md-0 justify-content-center d-flex align-items-center" data-aos="fade-up" data-aos-duration="1000">
                            <img class="fest-logo" src="{{ asset('images/fests/MS.webp') }}" alt="MIGHTY SOUNDS">
                        </div>
                        <div class="col-md-3 col mb-5 mb-md-0 justify-content-center d-flex align-items-center" data-aos="fade-up" data-aos-duration="1000">
                            <img class="fest-logo" src="{{ asset('images/fests/RFCH.webp') }}" alt="ROCK FOR CHURCHILL">
                        </div>
                        <div class="col-md-3 col mb-5 mb-md-0 justify-content-center d-flex align-items-center" data-aos="fade-up" data-aos-duration="1000">
                            <img class="fest-logo" src="{{ asset('images/fests/SP.webp') }}" alt="SOUNDS TRACK">
                        </div>
                        <div class="col-md-3 col mb-5 mb-md-0 justify-content-center d-flex align-items-center" data-aos="fade-up" data-aos-duration="1000">
                            <img class="fest-logo" src="{{ asset('images/fests/KVIFF.webp') }}" alt="Karlovy Vary International Film Festival">
                        </div>
                        <div class="col-md-3 col mb-5 mb-md-0 justify-content-center d-flex align-items-center" data-aos="fade-up" data-aos-duration="1000">
                            <img class="fest-logo" src="{{ asset('images/fests/Colours.webp') }}" alt="Colours of Ostrava">
                        </div>
                        <div class="col-md-3 col mb-5 mb-md-0 justify-content-center d-flex align-items-center" data-aos="fade-up" data-aos-duration="1000">
                            <img class="fest-logo" src="{{ asset('images/fests/ZFF.png') }}" alt="Zlin Film Festival">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="hp-concerts py-5">
        <div class="container py-lg-5 py-0">
            {% for concert in concerts %}
                <div class="d-flex justify-content-around align-items-center pb-3 flex-lg-row flex-column">
                    <div class="text-capitalize px-1 fw-bold text-white bg-concert-date-hp date-concert mb-3 mb-lg-0">
                        {{  concert.date|format_datetime(pattern="EEEE dd.MM.yy", locale='cs') }}
                    </div>
                    <div class="text-uppercase h5 mb-3 mb-lg-0 fw-bold text-dark text-center">
                        {{ concert.name }}
                    </div>
                    <div class="text-dark helvetica-font mb-3 mb-lg-0">
                        {{ concert.location }}
                    </div>
                    <a class="text-decoration-underline fw-bold text-dark" href="{{ concert.tickets }}" target="_blank">
                        Vstupenky
                    </a>
                </div>
            {% endfor %}
            <div class="text-center mt-5 mt-lg-3 mb-2">
                <a class="more-concerts mx-auto" href="{{ path('app_concerts') }}">Další koncerty</a>
            </div>
        </div>
    </div>

    <div class="bg-purple grid-bg pt-5 pb-3">
        <div class="container pt-5 my-4">
            <div class="row">
                {% for merch in merchItems %}
                    <a href="{{ path('app_merch_detail', {merch: merch.id}) }}" class="col-12 col-sm-6 col-lg-4 mb-5 text-center text-decoration-none merch-item" data-aos="fade-up" data-aos-duration="1000">
                        <img class="w-100 rounded" src="{{ asset(imageAssets ~ merch.orderedImages|first.fileName) }}" alt="{{ merch.name }}">
                        <h4 class="fw-bold text-uppercase text-white mt-3 mt-md-5 mb-2">{{ merch.name }}</h4>
                        <p class="text-white mb-4 helvetica-font">{{ merch.price|format_currency('CZK', {fraction_digit: 0}, locale='cs_CZ') }}</p>
                        <button class="text-white merch-button fw-bold">Prohlédnout</button>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>

    {% include 'site/app/_component/footer.html.twig' %}
{% endblock %}