{% extends 'admin/components/layout.html.twig' %}

{% block title %}{{ "merch.create"|trans }}{% endblock %}

{% block content %}
    <h1 class="mt-4">{{ "merch.create"|trans }}</h1>

    {% include 'admin/components/flashes.html.twig' %}

    <div class="card mb-4">
        {{ form_start(form) }}
        <div class="card-body">
            <div class="row">
                <div class="col">
                    {{ form_row(form.name) }}
                </div>
                <div class="col">
                    {{ form_row(form.price) }}
                </div>
            </div>
            {{ form_row(form.sizes) }}
            {{ form_row(form.images) }}
            {{ form_row(form.active) }}
        </div>
        <div class="card-footer">
            {{ form_row(form.submit) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}